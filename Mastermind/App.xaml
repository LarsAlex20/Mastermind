<Application x:Class="Mastermind.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Mastermind"
             xmlns:views="clr-namespace:Mastermind.Views"
             xmlns:viewmodels="clr-namespace:Mastermind.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:ViewModelGameBoard}">
            <views:Spielbrett/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ViewModelMenu}">
            <views:Menu/>
        </DataTemplate>
    </Application.Resources>
</Application>
